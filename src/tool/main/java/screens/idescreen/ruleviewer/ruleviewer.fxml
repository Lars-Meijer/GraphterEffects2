<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="visElemPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="screens.idescreen.ruleviewer.RuleViewerPresenter">
   <children>
      <TitledPane fx:id="titledPane" alignment="CENTER_RIGHT" collapsible="false" contentDisplay="RIGHT">
         <graphic>
            <ButtonBar prefHeight="22.0">
               <buttons>
                  <TextField fx:id="filterArgumentsTextField" promptText="query"/>
                  <Button fx:id="filterButton" mnemonicParsing="false" text="Query" onAction="#queryButtonPressed"/>
               </buttons>
            </ButtonBar>
         </graphic>
         <content>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
              <items>
                <StackPane fx:id="queryResultPane">
                     <children>
                        <TextField fx:id="queryResultTextField" editable="false"/>
                     </children>
                  </StackPane>
                <StackPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                     <children>
                        <TableView fx:id="rulesTable">
                          <columns>
                            <TableColumn fx:id="headColumn" prefWidth="75.0" text="Head" />
                            <TableColumn fx:id="tailColumn" prefWidth="75.0" text="Tail" />
                          </columns>
                        </TableView>
                     </children>
                  </StackPane>
              </items>
            </SplitPane>
         </content>
      </TitledPane>
   </children>
</StackPane>
