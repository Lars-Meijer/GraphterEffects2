node labels:
    "wolf",
    "Goat" as goat,
    "Cabbage" as cabbage,
    "Boat" as boat,
    "Bank" as bank.

edge labels:
    "on",
    "in",
    "likes",
    "moored",
    "go".

backgroundImage("images/river.png").

shape(water, rectangle).
colour(water, blue).
dimensions(water, 40, 8).

wolf(X); goat(X); cabbage(X) ->
    passenger(X).

passenger(X), passenger(Y) ->
    noOverlap(X, Y).

wolf(X) ->
    image(X, "images/wolf.png"),
    dimensions(X, 4, 4).

goat(X) ->
    image(X, "images/sheep.png"),
    dimensions(X, 4, 4).

cabbage(X) ->
    image(X, "images/cabbage.png"),
    dimensions(X, 4, 4).

boat(X) ->
    image(X, "images/boat front.png"),
    image([X, back], "images/boat back.png"),
    dimensions(X, 16, 6),
    dimensions([X, back], 16, 6),
    align(X, [X, back]),
    enclosedHorizontal(X, water),
    above(X, water, -3),
    before(X, water).

bank(X) ->
    shape(X, rectangle),
    colour(X, green),
    alignBottom(X, water).

bank(X), bank(Y) ->
    sameWidth(X, Y).

boat(X), bank(Y) ->
    alignTop(X, Y).

bank(X), attribute(X, "flag", "left") ->
    left(X, water, 0).

bank(X), attribute(X, "flag", "right") ->
    right(X, water, 0).

on(Passenger, Bank) ->
    above(Passenger, Bank, -2),
    enclosedHorizontal(Passenger, Bank),
    before(Passenger, Bank).

in(Passenger, Boat) ->
 above(Passenger, Boat, -3),
    enclosedHorizontal(Passenger, Boat),
    alignHorizontal(Passenger, Boat),
    behind(Passenger, Boat),
    before(Passenger, [Boat, back]).

moored(Boat, Bank); go(Boat, Bank) ->
    horizontalDistance(Boat, Bank, 0).

// --- Legend ---
shape(legend, rectangle).
colour(legend, lightpink).
above(legend, water, 8).
alignLeft(legend, water).
zPos(legend, -1).

passenger(X), image(X, Path) -> image([X, mini], Path), dimensions([X, mini], 2, 2).

likes(X, Y, Z) ->
    image(Z, "images/heart.png"),
    dimensions(Z, 2, 2),
    left([X, mini], Z, 0),
    left(Z, [Y, mini], 0),
    alignVertical([X, mini], Z),
    alignVertical(Z, [Y, mini]),
    enclosed([X, mini], legend),
    enclosed([Y, mini], legend),
    enclosed(Z, legend).
