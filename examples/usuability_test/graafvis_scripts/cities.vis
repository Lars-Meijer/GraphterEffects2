//Node Layout
node(X),attribute(X,name,Y) -> city(X).
node(X),label(X,Y) -> actor(X).

city(X),attribute(X,name,N) -> shape(X,ellipse), width(X,40), height(X,40), text([X,"t"],N), before([X,"t"],X),align([X,"t"],X),dimensions([X,"t"],40,40).
//actor(X) -> shape(X,rectangle), width(X,40), height(X,40), colour(X,blue).

node(X),node(Y) -> distance(X,Y,">",10).
node(X),label(X,"wolf") -> shape(X,rectangle),colour(X,red),dimensions(X,40,40).

wolf(X) ->
	image(X, "images/wolf.png"),
	dimensions(X, 128, 128).
//image and dimensions of the wolf are specified.

goat(X) ->
	image(X, "images/wolf.png"),
